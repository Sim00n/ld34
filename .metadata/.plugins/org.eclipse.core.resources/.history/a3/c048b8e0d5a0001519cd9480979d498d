package com.puzdrowski.decision.entity;

import com.badlogic.gdx.graphics.Texture;
import com.badlogic.gdx.graphics.g2d.Batch;
import com.puzdrowski.decision.Game;
import com.puzdrowski.decision.entity.Entity.TYPE;

public class FactorEntity extends Entity {

	public FactorEntity(Texture texture, int x, int y, float theta, TYPE type) {
		super(texture, x, y, theta, type);
	}

	public void update(float tick, float rollingSpeed, int i) {
		super.update(tick);

		if(type == TYPE.OUTER) {
			x = (int) (Game.WIDTH/2 - 40 + Math.cos(Math.toRadians(theta * i)) * 550);
			y = (int) (Game.HEIGHT/2 - 100 + Math.sin(Math.toRadians(theta * i)) * 280);
		} else if(type == TYPE.MIDDLE) {
			int x = (int) (Game.WIDTH/2 - 40 + Math.cos(Math.toRadians(theta * i)) * 340);
			int y = (int) (Game.HEIGHT/2 - 100 + Math.sin(Math.toRadians(theta * i)) * 180);
		} else if(type == TYPE.INNER) {
			int x = (int) (Game.WIDTH/2 - 40 + Math.cos(Math.toRadians(theta * i)) * 130);
			int y = (int) (Game.HEIGHT/2 - 100 + Math.sin(Math.toRadians(theta * i)) * 100);
		}
	}
	
	@Override
	public void render(Batch batch) {
		batch.draw(texture, x, y, 80, 80);
	}
	
	
}
